<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundfinal"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/logoimgview"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/profile"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.105"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.037" />

    <Button
        android:id="@+id/edittitle"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_marginBottom="452dp"
        android:background="@drawable/capsule"
        android:fontFamily="@font/avenir"
        android:src="@drawable/text_logo"
        android:text="@string/editprofiletext"
        android:textAlignment="center"
        android:textColor="@color/colorwhite"
        android:textSize="20dp"
        android:textAllCaps="false"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintVertical_bias="0.1"
        app:layout_constraintLeft_toLeftOf="@id/logoimgview"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/editpastmeetups"
        android:layout_width="180dp"
        android:layout_height="30dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/capsule"
        android:fontFamily="@font/avenir"
        android:src="@drawable/text_logo"
        android:text="@string/editpastmeetups"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/colorwhite"
        android:textSize="20dp"
        app:layout_constraintHorizontal_bias="0.7"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edittitle" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="20dp"
        android:background="@color/colorBlack"
        app:layout_constraintTop_toBottomOf="@id/editpastmeetups"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        />

    <TextView
        android:id="@+id/discovertext"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/avenir"
        android:text="Discover"
        android:textAlignment="center"
        android:textColor="@color/colorBlackdark"
        android:textSize="24dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/divider" />

    <TextView
        android:id="@+id/desc"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="264dp"
        android:fontFamily="@font/avenir"
        android:text="People you might meet!"
        android:textAlignment="center"
        android:textColor="@color/lightpurple"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/discovertext"
        app:layout_constraintVertical_bias="0.0" />

    <RelativeLayout
        android:id="@+id/profilelayout"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_marginStart="40dp"
        android:background="@drawable/layout_bg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/desc">

        <ImageView
            android:id="@id/imageView3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="100dp"
            android:src="@drawable/profile"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/imageView3"
            android:layout_alignParentStart="true"
            android:layout_marginStart="108dp"
            android:layout_marginLeft="68dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="40dp"
            android:fontFamily="@font/avenir"
            android:text="Richard Henricks"
            android:textColor="@color/colorBlackdark"
            android:textSize="22dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="@+id/imageView3" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView3"
            android:layout_alignBottom="@+id/imageView3"
            android:layout_marginStart="-2dp"
            android:layout_marginLeft="68dp"
            android:layout_marginBottom="-16dp"
            android:text="CEO at Pied Piper"
            android:textColor="@color/colorBlackdark"
            android:textSize="20dp"
            app:layout_constraintLeft_toLeftOf="@+id/imageView3"
            app:layout_constraintTop_toBottomOf="@+id/textView3" />

    </RelativeLayout>

    <TextView
        android:id="@+id/relevanttext"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="195dp"
        android:fontFamily="@font/avenir"
        android:text="Relevant to your\n professional network *?"
        android:textAlignment="center"
        android:textColor="@color/lightpurple"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profilelayout"
        app:layout_constraintVertical_bias="0.1" />

    <Button
        android:id="@+id/editmaybe"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:background="@drawable/capsulewhite"
        android:fontFamily="@font/avenir"
        android:src="@drawable/text_logo"
        android:text="Maybe"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/colorBlackdark"
        android:textSize="18dp"
        app:layout_constraintVertical_bias="2"
        app:layout_constraintTop_toBottomOf="@id/relevanttext"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/editno"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/capsulewhite"
        android:fontFamily="@font/avenir"
        android:src="@drawable/text_logo"
        android:text="No"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/colorBlackdark"
        android:textSize="18dp"
        app:layout_constraintHorizontal_bias="0.16"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/relevanttext" />

    <Button
        android:id="@+id/edityes"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:background="@drawable/capsulewhite"
        android:fontFamily="@font/avenir"
        android:src="@drawable/text_logo"
        android:text="Yes"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/colorBlackdark"
        android:textSize="18dp"
        app:layout_constraintHorizontal_bias="0.858"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/relevanttext" />

    <TextView
        android:id="@+id/alreadytext"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:fontFamily="@font/avenir"
        android:text="@string/alreadyknow"
        android:textAlignment="center"
        android:textColor="@color/lightpurple"
        android:textSize="15dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/editmaybe"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/noticetext"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/avenir"
        android:text="@string/notice"
        android:textAlignment="center"
        android:textColor="@color/colorBlackdark"
        android:textSize="13dp"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editmaybe" />


    <View
        android:id="@+id/divider2"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="436dp"
        android:background="@color/colorBlack"
        app:layout_constraintTop_toBottomOf="@id/editpastmeetups"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/editone"
        android:layout_width="220dp"
        android:layout_height="30dp"
        android:layout_marginTop="52dp"
        android:background="@drawable/capsule"
        android:fontFamily="@font/avenir"
        android:src="@drawable/text_logo"
        android:text="View Upcoming Meetups"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/colorwhite"
        android:textSize="18dp"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/divider2" />

    <Button
        android:id="@+id/edittwo"
        android:layout_width="190dp"
        android:layout_height="30dp"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/capsule"
        android:fontFamily="@font/avenir"
        android:src="@drawable/text_logo"
        android:text="Sign Up for this week"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/colorwhite"
        android:textSize="18dp"
        app:layout_constraintHorizontal_bias="0.403"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editone" />

    <Button
        android:id="@+id/edithree"
        android:layout_width="175dp"
        android:layout_height="30dp"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/capsule"
        android:fontFamily="@font/avenir"
        android:src="@drawable/text_logo"
        android:text="Invite your friends"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/colorwhite"
        android:textSize="18dp"
        app:layout_constraintHorizontal_bias="0.412"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edittwo" />

</androidx.constraintlayout.widget.ConstraintLayout>