<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerupcomingmeetings"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:layout_marginTop="190dp"
        android:scrollbars="vertical"
        android:scrollbarSize="10dp"
        android:scrollbarFadeDuration="2"
        style="@style/scrollbar_style"
        android:background="@drawable/backgroundfinal"></androidx.recyclerview.widget.RecyclerView>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="83dp"
        android:layout_marginTop="126dp"
        android:fontFamily="@font/avenir"
        android:text="Upcoming Meetups"
        android:textColor="@color/lightpurple"
        android:textSize="25dp"
        android:textStyle="bold" />

    <Button
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:layout_alignStart="@+id/textView6"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="56dp"
        android:layout_marginBottom="28dp"
        android:background="@drawable/capsule"
        android:fontFamily="@font/avenir"
        android:text="Back to Profile"
        android:textColor="@color/colorwhite" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/ic_edit" />
</RelativeLayout>