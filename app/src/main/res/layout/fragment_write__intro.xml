    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="Fragments.Write_Intro">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/intro_img"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_weight="30"
            android:padding="48dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_share" />

        <!--<LinearLayout
            android:id="@+id/linear_layout_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/intro_text"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/user_img"
                android:layout_width="50dp"
                android:src="@drawable/profile"
                android:layout_marginLeft="2dp"
                android:layout_height="70dp" />

            <Button
                android:id="@+id/edit_button"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:text="Change"
                android:textStyle="bold"
                android:layout_marginLeft="30dp"
                android:fontFamily="@font/avenir"
                android:textAllCaps="false"
                android:textColor="@color/colorwhite"
                android:background="@drawable/capsuleselected" />

        </LinearLayout>-->

        <TextView
            android:id="@+id/intro_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/intro_img"
            android:layout_marginVertical="12dp"
            android:fontFamily="@font/avenir"
            android:text="How would you like \n to be introduced?"
            android:textAlignment="center"
            android:textColor="@color/colorBlackdark"
            android:textSize="20dp"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="48dp">
            <EditText
                android:id="@+id/designation_etv"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/at_tv"
                android:hint="Designation"/>

            <TextView
                android:id="@+id/at_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:paddingHorizontal="16dp"
                android:layout_alignBaseline="@id/designation_etv"
                android:textSize="20sp"
                android:text="at"/>
        </RelativeLayout>

        <EditText
            android:id="@+id/org_etv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="48dp"
            android:hint="Organisation"/>


    <LinearLayout
        android:id="@+id/linear_layout_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="48dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/msg_img"
            android:layout_width="50dp"
            android:src="@drawable/message"
            android:layout_height="70dp"
            android:layout_marginRight="8dp"
            android:paddingTop="1dp" />

        <TextView
            android:id="@+id/msg_text"
            android:text="Subject: Your match for this week!\nFrom: Brunchify\n"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:paddingBottom="3dp"
            android:paddingTop="1dp"
            android:textColor="@color/colorBlue"
            android:gravity="left"
            android:fontFamily="@font/avenir"
            android:textSize="16sp"/>

    </LinearLayout>
    <EditText
        android:id="@+id/bio_textbox"
        android:background="@drawable/textbox"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="60"
        android:padding="16dp"
        android:layout_above="@id/done_onboarding_btn"
        android:layout_below="@+id/linear_layout_2"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="48dp"
        android:hint="Enter introduction here...\n\n" />

    <Button
        android:id="@+id/done_onboarding_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="Done"
        android:layout_margin="16dp"
        android:textColor="@color/colorwhite"
        android:background="@color/lightpurple"/>
    </LinearLayout>

</FrameLayout>
