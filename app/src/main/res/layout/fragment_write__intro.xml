<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="Fragments.Write_Intro">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/intro_img"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginVertical="30dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_share" />

        <TextView
            android:id="@+id/intro_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/intro_img"
            android:layout_marginTop="9dp"
            android:fontFamily="@font/avenir"
            android:text="How would you like \n to be introduced?"
            android:textAlignment="center"
            android:textColor="@color/colorBlackdark"
            android:textSize="20dp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/linear_layout_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/intro_text"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/user_img"
                android:layout_width="50dp"
                android:src="@drawable/profile"
                android:layout_marginLeft="2dp"
                android:layout_height="70dp" />

            <Button
                android:id="@+id/edit_button"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:text="Change"
                android:textStyle="bold"
                android:layout_marginLeft="30dp"
                android:fontFamily="@font/avenir"
                android:textAllCaps="false"
                android:textColor="@color/colorwhite"
                android:background="@drawable/capsuleselected" />

        </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_layout_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linear_layout_1"
        android:layout_centerHorizontal="true"
        android:layout_marginVertical="16dp"
        android:layout_marginHorizontal="48dp"
        android:orientation="horizontal">

    <ImageView
        android:id="@+id/msg_img"
        android:layout_width="50dp"
        android:src="@drawable/message"
        android:layout_height="70dp"
        android:layout_marginRight="8dp"
        android:paddingTop="1dp" />

    <TextView
        android:id="@+id/msg_text"
        android:text="Subject: Your match for this week!\nFrom: Brunchify\n"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:paddingBottom="3dp"
        android:paddingTop="1dp"
        android:textColor="@color/colorBlue"
        android:gravity="left"
        android:fontFamily="@font/avenir"
        android:textSize="16sp"/>

    </LinearLayout>
    <EditText
        android:id="@+id/bio_textbox"
        android:background="@drawable/textbox"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/done_onboarding_btn"
        android:layout_below="@+id/linear_layout_2"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="48dp"
        android:layout_marginBottom="16dp"
        android:hint="Enter introduction here...\n\n" />

    <Button
        android:id="@+id/done_onboarding_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_alignParentBottom="true"
        android:text="Done"
        android:layout_margin="16dp"
        android:textColor="@color/colorwhite"
        android:background="@color/lightpurple"/>
    </RelativeLayout>

</FrameLayout>
