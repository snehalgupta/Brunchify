<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="Fragments.Select_Neighbourhood">

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:background="@color/colorwhite">

        <ImageView
            android:id="@+id/logoimgview"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/location"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.06" />

        <TextView
            android:id="@+id/wstitle"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="30dp"
            android:fontFamily="@font/avenir"
            android:src="@drawable/text_logo"
            android:text="@string/neighbourhoodtext"
            android:textAlignment="center"
            android:textColor="@color/colorBlackdark"
            android:textSize="24dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/logoimgview"
            app:layout_constraintVertical_bias="0.064" />

        <EditText
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginStart="80dp"
            android:layout_marginBottom="244dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_marginStart="216dp"
            android:layout_marginBottom="236dp"
            android:background="@drawable/capsule"
            android:fontFamily="@font/avenir"
            android:text="Change"
            android:textAllCaps="false"
            android:textColor="@color/colorwhite"
            android:textSize="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginStart="216dp"
            android:layout_marginBottom="104dp"
            android:background="@drawable/capsulewhite"
            android:fontFamily="@font/avenir"
            android:text="Palo Alto"
            android:textAllCaps="false"
            android:textColor="@color/colorBlackdark"
            android:textSize="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginStart="80dp"
            android:layout_marginBottom="104dp"
            android:background="@drawable/capsulewhite"
            android:fontFamily="@font/avenir"
            android:text="SoMa"
            android:textAllCaps="false"
            android:textColor="@color/colorBlackdark"
            android:textSize="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginStart="204dp"
            android:layout_marginBottom="156dp"
            android:background="@drawable/capsulewhite"
            android:fontFamily="@font/avenir"
            android:text="Fidi"
            android:textAllCaps="false"
            android:textColor="@color/colorBlackdark"
            android:textSize="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginStart="80dp"
            android:layout_marginBottom="160dp"
            android:background="@drawable/capsulewhite"
            android:fontFamily="@font/avenir"
            android:text="Mission"
            android:textAllCaps="false"
            android:textColor="@color/colorBlackdark"
            android:textSize="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>
