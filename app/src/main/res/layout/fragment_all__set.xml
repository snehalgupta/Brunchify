<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="Fragments.All_Set">

    <RelativeLayout
        android:background="@drawable/backgroundfinal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="invisible"
            android:id="@+id/progressBar"
            android:layout_centerHorizontal="true"

            android:layout_centerVertical="true"
            android:gravity="center">

            <ProgressBar
                android:layout_width="100dp"
                android:layout_height="100dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Setting you up :)"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@color/colorBlackdark"
                android:fontFamily="@font/avenir"
                android:textSize="24dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/all_set_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

        <ImageView
            android:id="@+id/set_img"
            android:layout_width="match_parent"
            android:layout_marginVertical="30dp"
            android:layout_height="100dp"
            android:scaleType="fitCenter"
            android:layout_centerHorizontal="true"
            android:src="@drawable/all_set" />

        <TextView
            android:id="@+id/set_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/set_img"
            android:layout_marginVertical="16dp"
            android:text="You are all Set!"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@color/colorBlackdark"
            android:fontFamily="@font/avenir"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/sup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/set_text"
            android:layout_marginVertical="16dp"
            android:layout_marginTop="50dp"
            android:text="Get Started"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@color/colorBlackdark"
            android:fontFamily="@font/avenir"
            android:textSize="20dp" />

        <Button
            android:id="@+id/get_started_btn"
            android:layout_width="160dp"
            android:layout_height="60dp"
            android:layout_below="@+id/sup"
            android:layout_centerHorizontal="true"
            android:background="@drawable/capsule"
            android:fontFamily="@font/avenir"
            android:text="Sign Up for\nthis week"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/colorwhite"
            android:textSize="20dp"
            />
        </LinearLayout>

    </RelativeLayout>

</FrameLayout>
