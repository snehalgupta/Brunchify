<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ImageView
        android:id="@+id/logoimgview"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_collaboration"
        />

    <TextView
        android:id="@+id/wstitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/logoimgview"
        android:layout_marginBottom="30dp"
        android:fontFamily="@font/avenir"
        android:src="@drawable/text_logo"
        android:text="@string/welcomescreenfourtext1"
        android:textAlignment="center"
        android:textColor="@color/colorBlue"
        android:textSize="28dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/wstitle"
        android:layout_marginBottom="30dp"
        android:fontFamily="@font/avenir"
        android:src="@drawable/text_logo"
        android:text="@string/welcomescreenfourtext2"
        android:textAlignment="center"
        android:textColor="@color/colorBlackdark"
        android:textSize="20dp"
        />
</RelativeLayout>