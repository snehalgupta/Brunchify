<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/slot_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="@color/lightpurple"
        android:textSize="20dp" />

    <Button
        android:id="@+id/slot_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/slot_date"
        android:layout_marginVertical="16dp"
        android:layout_marginHorizontal="7dp"
        android:background="@drawable/capsulewhite"
        android:text="10 AM" />

    <Button
        android:id="@+id/slot_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/slot_date"
        android:layout_toRightOf="@+id/slot_1"
        android:layout_marginVertical="16dp"
        android:layout_marginHorizontal="7dp"
        android:background="@drawable/capsulewhite"
        android:text="12 PM" />

    <Button
        android:id="@+id/slot_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/slot_date"
        android:layout_toRightOf="@+id/slot_2"
        android:layout_marginVertical="16dp"
        android:layout_marginHorizontal="7dp"
        android:background="@drawable/capsulewhite"
        android:text="1 PM" />

    <Button
        android:id="@+id/slot_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/slot_date"
        android:layout_toRightOf="@+id/slot_3"
        android:layout_marginVertical="16dp"
        android:layout_marginHorizontal="7dp"
        android:background="@drawable/capsulewhite"
        android:text="2 PM" />


</RelativeLayout>
